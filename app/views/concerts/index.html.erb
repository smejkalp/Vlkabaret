<h2>Program</h2>
<% if is_admin %><%= link_to "Nový", new_concert_path %><br><br><% end %>
<% for concert in @concerts%>
<div class="concert">

	<% if is_admin %>
		<div><%= link_to 'Edit', edit_concert_path(concert) %></div>
	<% end %>

	<div class="concert_name">
		<h3><%=h concert.name%></h3>
	</div>
	<div class="concert_time">
		<%=h concert.date_str%>, <%=h concert.time_range_str%>
	</div>
	<div class="concert_info">
		<%=h concert.info%>
	</div>
	
	<% if concert.is_in_club? %>
		<div class="concert_club">
			<%=h concert.club_name%>
			<% if is_admin %>
				<%= link_to "Detail", club_path(concert.club.id) %>
			<% end %>
		</div>
	<% end %>
	
	<% if concert.price %>
		<div class="concert_price">
			<%= number_to_currency(concert.price, :unit => "Kč", :separator => ",", :delimiter => "", :format => "%n %u")%>
		</div>
	<% end %>
</div>
<% end %>
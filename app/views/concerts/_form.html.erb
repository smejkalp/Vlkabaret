<% form_for @concert do |f| -%>
<%= f.label :name, "Název" %><br>
<%= f.text_field :name %><br>
<br>
<%= f.label :info, "Info" %><br>
<%= f.text_area :info %><br>
<br>
<%= f.label :club_id, "Místo" %><br>
<%= f.collection_select :club_id, Club.all(), :id, :name %>
<br>
<%= f.label :price, "Cena [Kč]" %><br>
<%= f.text_field :price %><br>
<br>
<%= f.label :date, "Datum" %><br>
<%= f.text_field :date, :onfocus => "showCalendarControl(this);" %><br>
<br>
<%= f.label :start_time, "Začátek" %><br>
<%= time_select("concert","start_time")%><br>
<br>
<%= f.label :end_time, "Konec" %><br>
<%= time_select("concert","end_time")%><br>
<br>
<%= f.submit "Uložit", :disable_with => 'Ukládám...' %>
<% end -%>
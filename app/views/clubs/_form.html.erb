<% form_for @club do |f| -%>
<%= f.label :name, "Název" %><br>
<%= f.text_field :name %><br>
<br>
<%= f.label :www, "Web" %><br>
<%= f.text_field :www %><br>
<br>
<%= f.label :phone, "Telefon" %><br>
<%= f.text_field :phone %><br>
<br>
<%= f.label :email, "E-mail" %><br>
<%= f.text_field :email %><br>
<br>
<%= f.label :address, "Adresa" %><br>
<%= f.text_area :address %><br>
<br>
<%= f.label :map_link, "Mapa" %><br>
<%= f.text_field :map_link %><br>
<br>
<%= f.label :info, "Info" %><br>
<%= f.text_area :info %><br>
<br>
<%= f.submit "Uložit", :disable_with => 'Ukládám...' %>
<% end -%>
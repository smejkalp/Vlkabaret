<% form_for @user do |f| -%>
	<%= f.label :firstName, "Jméno" %><br>
	<%= f.text_field :firstName %><br>
<br>
	<%= f.label :lastName, "Příjmení" %><br>
	<%= f.text_field :lastName %><br>
<br>
	<%= f.label :email, "E-mail" %><br>
	<%= f.text_field :email %><br>
<br>
	<%= f.label :login, "Login" %><br>
	<%= f.text_field :login %><br>
<br>
	<%= f.label :password, "Heslo" %><br>
	<%= f.password_field :password %><br>
<br>
	<%= f.label :password_confirmation, "Heslo (znovu)" %><br>
	<%= f.password_field :password_confirmation %><br>
<br>
	<%= f.label :info, "Info" %><br>
	<%= f.text_area :info %><br>
<br>
<%= f.submit "Vytvořit", :disable_with => 'Vytvářím...' %>
<% end -%>